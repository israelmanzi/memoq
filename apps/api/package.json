{
  "name": "@memoq/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/multipart": "^9.0.0",
    "@memoq/shared": "workspace:*",
    "argon2": "^0.41.0",
    "cldr-segmentation": "^2.2.1",
    "dotenv": "^16.4.0",
    "drizzle-orm": "^0.45.1",
    "fast-xml-parser": "^4.5.0",
    "fastest-levenshtein": "^1.0.16",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "nanoid": "^5.0.0",
    "pino": "^9.6.0",
    "postgres": "^3.4.0",
    "xliff": "^6.2.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.0.0",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
