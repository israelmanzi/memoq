# Database
POSTGRES_USER=oxy
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=oxy
POSTGRES_PORT=5066

# Redis
REDIS_PORT=5065
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:your-secure-redis-password-here@localhost:5065

# API
API_PORT=5064
NODE_ENV=production

# Web
WEB_PORT=5063

# Auth
JWT_SECRET=generate-a-long-random-string-here
JWT_EXPIRES_IN=7d

# URLs
VITE_API_URL=https://your-domain.com:5064/api/v1
APP_URL=https://your-domain.com:5063

# Email - Resend
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=OXY <noreply@your-domain.com>

# MinIO / S3 Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9002
MINIO_CONSOLE_PORT=9003
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=oxy-documents

# Rate Limiting (optional)
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW=60000

# Cache TTLs in seconds (optional)
# CACHE_TM_MATCH_TTL=3600
# CACHE_TB_MATCH_TTL=3600

# Session TTL in seconds (optional)
# SESSION_TTL=604800
